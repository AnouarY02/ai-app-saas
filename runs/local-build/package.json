{
  "name": "ai-app-saas-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "lerna run dev --parallel",
    "build": "lerna run build --stream",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "start:frontend": "lerna run start --scope=frontend",
    "start:backend": "lerna run start --scope=backend",
    "test": "lerna run test"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "lerna": "^7.0.0",
    "typescript": "^5.0.0",
    "dotenv": "^16.0.0"
  }
}

