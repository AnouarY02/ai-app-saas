{
  "name": "ai-app-saas-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace backend dev\" \"yarn workspace frontend dev\"",
    "build": "yarn workspace backend build && yarn workspace frontend build",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "echo \"No tests defined yet\"",
    "start": "yarn workspace backend start"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0"
  }
}

