{
  "appName": "AI App",
  "description": "Een eenvoudige SaaS-app waarmee gebruikers AI-taken kunnen beheren. Gebruikers kunnen zich registreren, inloggen en hun eigen AI-taken aanmaken en bekijken.",
  "tier": "medium",
  "stack": {
    "framework": "Next.js 14 App Router",
    "language": "TypeScript",
    "styling": [
      "Tailwind CSS",
      "shadcn/ui"
    ],
    "api": [
      "Next.js Route Handlers (app/api)"
    ],
    "notes": "Alle UI gebruikt shadcn/ui componenten. Auth is basic (email/wachtwoord, geen externe providers). Data wordt in-memory opgeslagen voor MVP."
  },
  "domains": [
    {
      "name": "User",
      "description": "Beheert gebruikersaccounts en authenticatie.",
      "entities": [
        {
          "name": "User",
          "description": "Een geregistreerde gebruiker van de app.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de gebruiker."
            },
            {
              "name": "email",
              "type": "string",
              "required": true,
              "description": "Emailadres van de gebruiker."
            },
            {
              "name": "passwordHash",
              "type": "string",
              "required": true,
              "description": "Gehasht wachtwoord van de gebruiker."
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum van het account."
            }
          ]
        }
      ]
    },
    {
      "name": "AITask",
      "description": "Beheert AI-taken die door gebruikers worden aangemaakt.",
      "entities": [
        {
          "name": "AITask",
          "description": "Een AI-taak die door een gebruiker is aangemaakt.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de taak."
            },
            {
              "name": "userId",
              "type": "string",
              "required": true,
              "description": "ID van de gebruiker die de taak heeft aangemaakt."
            },
            {
              "name": "title",
              "type": "string",
              "required": true,
              "description": "Titel van de AI-taak."
            },
            {
              "name": "description",
              "type": "string",
              "required": false,
              "description": "Optionele beschrijving van de taak."
            },
            {
              "name": "status",
              "type": "string",
              "required": true,
              "description": "Status van de taak (pending, running, completed, failed)."
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum van de taak."
            }
          ]
        }
      ]
    }
  ],
  "routes": [
    {
      "path": "/",
      "type": "page",
      "description": "Homepagina met uitleg en call-to-action.",
      "file": "app/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/login",
      "type": "page",
      "description": "Loginpagina voor bestaande gebruikers.",
      "file": "app/login/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/register",
      "type": "page",
      "description": "Registratiepagina voor nieuwe gebruikers.",
      "file": "app/register/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "layout",
      "description": "Dashboardlayout voor ingelogde gebruikers.",
      "file": "app/dashboard/layout.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "page",
      "description": "Overzicht van AI-taken van de gebruiker.",
      "file": "app/dashboard/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard/tasks/new",
      "type": "page",
      "description": "Pagina voor het aanmaken van een nieuwe AI-taak.",
      "file": "app/dashboard/tasks/new/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    }
  ],
  "apiRoutes": [
    {
      "path": "/api/auth/register",
      "methods": [
        "POST"
      ],
      "description": "Registreert een nieuwe gebruiker."
    },
    {
      "path": "/api/auth/login",
      "methods": [
        "POST"
      ],
      "description": "Logt een gebruiker in en geeft een sessietoken terug."
    },
    {
      "path": "/api/auth/logout",
      "methods": [
        "POST"
      ],
      "description": "Logt de gebruiker uit."
    },
    {
      "path": "/api/tasks",
      "methods": [
        "GET",
        "POST"
      ],
      "description": "Ophalen van alle AI-taken van de ingelogde gebruiker of een nieuwe taak aanmaken."
    },
    {
      "path": "/api/tasks/[id]",
      "methods": [
        "GET",
        "PATCH",
        "DELETE"
      ],
      "description": "Ophalen, bijwerken of verwijderen van een specifieke AI-taak."
    }
  ],
  "components": [
    {
      "name": "Navbar",
      "description": "Navigatiebalk bovenaan de app.",
      "file": "components/Navbar.tsx",
      "usedOn": [
        "app/layout.tsx"
      ]
    },
    {
      "name": "AuthForm",
      "description": "Formulier voor login en registratie.",
      "file": "components/AuthForm.tsx",
      "usedOn": [
        "app/login/page.tsx",
        "app/register/page.tsx"
      ]
    },
    {
      "name": "TaskList",
      "description": "Toont een lijst van AI-taken.",
      "file": "components/TaskList.tsx",
      "usedOn": [
        "app/dashboard/page.tsx"
      ]
    },
    {
      "name": "TaskForm",
      "description": "Formulier voor het aanmaken van een nieuwe AI-taak.",
      "file": "components/TaskForm.tsx",
      "usedOn": [
        "app/dashboard/tasks/new/page.tsx"
      ]
    },
    {
      "name": "TaskCard",
      "description": "Toont details van een enkele AI-taak.",
      "file": "components/TaskCard.tsx",
      "usedOn": [
        "components/TaskList.tsx"
      ]
    }
  ],
  "stateManagement": {
    "strategy": "React Context voor auth state, lokale component state voor formulieren en UI.",
    "notes": "AuthContext levert gebruikersinformatie en login/logout functionaliteit aan alle relevante componenten."
  },
  "dataLayer": {
    "strategy": "In-memory store (singleton pattern) voor gebruikers en taken.",
    "notes": "Voor MVP worden gebruikers en taken in memory opgeslagen. In productie kan eenvoudig een database worden toegevoegd."
  }
}