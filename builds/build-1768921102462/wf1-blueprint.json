{
  "appName": "AI App",
  "description": "Een eenvoudige SaaS-app waarmee gebruikers AI-taken kunnen beheren. Gebruikers kunnen zich registreren, inloggen, hun profiel bekijken en een lijst van AI-taken beheren (aanmaken, bekijken, verwijderen).",
  "tier": "medium",
  "stack": {
    "framework": "Next.js 14 App Router",
    "language": "TypeScript",
    "styling": [
      "Tailwind CSS",
      "shadcn/ui"
    ],
    "api": [
      "Next.js Route Handlers (app/api)"
    ],
    "notes": "Alle UI wordt gebouwd met shadcn/ui en Tailwind. API-routes zijn server actions via app/api/*."
  },
  "domains": [
    {
      "name": "User",
      "description": "Beheer van gebruikersaccounts en authenticatie.",
      "entities": [
        {
          "name": "User",
          "description": "Een geregistreerde gebruiker van de app.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de gebruiker."
            },
            {
              "name": "email",
              "type": "string",
              "required": true,
              "description": "E-mailadres van de gebruiker."
            },
            {
              "name": "passwordHash",
              "type": "string",
              "required": true,
              "description": "Gehasht wachtwoord van de gebruiker."
            },
            {
              "name": "name",
              "type": "string",
              "required": false,
              "description": "Naam van de gebruiker."
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum van het account."
            }
          ]
        }
      ]
    },
    {
      "name": "AITask",
      "description": "AI-taken die door gebruikers worden beheerd.",
      "entities": [
        {
          "name": "AITask",
          "description": "Een taak die door de gebruiker wordt aangemaakt.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de taak."
            },
            {
              "name": "userId",
              "type": "string",
              "required": true,
              "description": "De gebruiker die de taak heeft aangemaakt."
            },
            {
              "name": "title",
              "type": "string",
              "required": true,
              "description": "Titel van de AI-taak."
            },
            {
              "name": "description",
              "type": "string",
              "required": false,
              "description": "Beschrijving van de AI-taak."
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum van de taak."
            }
          ]
        }
      ]
    }
  ],
  "routes": [
    {
      "path": "/",
      "type": "page",
      "description": "Homepagina met uitleg en call-to-action.",
      "file": "app/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/login",
      "type": "page",
      "description": "Loginpagina voor bestaande gebruikers.",
      "file": "app/login/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/register",
      "type": "page",
      "description": "Registratiepagina voor nieuwe gebruikers.",
      "file": "app/register/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "layout",
      "description": "Dashboardlayout voor ingelogde gebruikers.",
      "file": "app/dashboard/layout.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "page",
      "description": "Overzicht van AI-taken van de gebruiker.",
      "file": "app/dashboard/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard/profile",
      "type": "page",
      "description": "Profielpagina van de gebruiker.",
      "file": "app/dashboard/profile/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard/tasks/new",
      "type": "page",
      "description": "Pagina voor het aanmaken van een nieuwe AI-taak.",
      "file": "app/dashboard/tasks/new/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    }
  ],
  "apiRoutes": [
    {
      "path": "/api/auth/register",
      "methods": [
        "POST"
      ],
      "description": "Registreer een nieuwe gebruiker."
    },
    {
      "path": "/api/auth/login",
      "methods": [
        "POST"
      ],
      "description": "Log een gebruiker in."
    },
    {
      "path": "/api/auth/logout",
      "methods": [
        "POST"
      ],
      "description": "Log een gebruiker uit."
    },
    {
      "path": "/api/user/profile",
      "methods": [
        "GET",
        "PUT"
      ],
      "description": "Bekijk of update het profiel van de gebruiker."
    },
    {
      "path": "/api/tasks",
      "methods": [
        "GET",
        "POST"
      ],
      "description": "Haal alle AI-taken op of maak een nieuwe taak aan."
    },
    {
      "path": "/api/tasks/[id]",
      "methods": [
        "GET",
        "DELETE"
      ],
      "description": "Bekijk of verwijder een specifieke AI-taak."
    }
  ],
  "components": [
    {
      "name": "Navbar",
      "description": "Navigatiebalk bovenaan de app.",
      "file": "components/Navbar.tsx",
      "usedOn": [
        "/",
        "/login",
        "/register",
        "/dashboard",
        "/dashboard/profile",
        "/dashboard/tasks/new"
      ]
    },
    {
      "name": "AuthForm",
      "description": "Formulier voor login en registratie.",
      "file": "components/AuthForm.tsx",
      "usedOn": [
        "/login",
        "/register"
      ]
    },
    {
      "name": "TaskList",
      "description": "Overzicht van AI-taken van de gebruiker.",
      "file": "components/TaskList.tsx",
      "usedOn": [
        "/dashboard"
      ]
    },
    {
      "name": "TaskForm",
      "description": "Formulier voor het aanmaken van een nieuwe AI-taak.",
      "file": "components/TaskForm.tsx",
      "usedOn": [
        "/dashboard/tasks/new"
      ]
    },
    {
      "name": "ProfileCard",
      "description": "Weergave van gebruikersprofielinformatie.",
      "file": "components/ProfileCard.tsx",
      "usedOn": [
        "/dashboard/profile"
      ]
    },
    {
      "name": "TaskItem",
      "description": "Weergave van een enkele AI-taak in de lijst.",
      "file": "components/TaskItem.tsx",
      "usedOn": [
        "/dashboard"
      ]
    }
  ],
  "stateManagement": {
    "strategy": "React Server Components met client components voor lokale UI-state. Auth-status via cookies/session.",
    "notes": "Minimale client-side state, authenticatie via HTTP-only cookies. Formulierstatus en UI-feedback via useState in client components."
  },
  "dataLayer": {
    "strategy": "In-memory store (singleton pattern) voor gebruikers en taken, gesimuleerd als eenvoudige database.",
    "notes": "Voor productie kan eenvoudig worden vervangen door een echte database. In-memory store wordt gedeeld via server actions en API-routes."
  }
}