{
  "appName": "AI App",
  "description": "Een eenvoudige SaaS-app waarmee gebruikers AI-gegenereerde tekst kunnen aanvragen en hun aanvraaggeschiedenis kunnen bekijken. Gebruikers kunnen inloggen, een prompt indienen, en hun resultaten beheren.",
  "tier": "medium",
  "stack": {
    "framework": "Next.js 14 App Router",
    "language": "TypeScript",
    "styling": [
      "Tailwind CSS",
      "shadcn/ui"
    ],
    "api": [
      "Next.js Route Handlers (app/api)"
    ],
    "notes": "Gebruikt Next.js App Router met server components, shadcn/ui voor consistente UI, en Tailwind CSS voor styling. Eenvoudige in-memory store voor data."
  },
  "domains": [
    {
      "name": "auth",
      "description": "Authenticatie en gebruikersbeheer.",
      "entities": [
        {
          "name": "User",
          "description": "Geregistreerde gebruiker van de app.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke gebruikers-ID"
            },
            {
              "name": "email",
              "type": "string",
              "required": true,
              "description": "E-mailadres van de gebruiker"
            },
            {
              "name": "passwordHash",
              "type": "string",
              "required": true,
              "description": "Gehasht wachtwoord"
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum"
            }
          ]
        }
      ]
    },
    {
      "name": "aiRequest",
      "description": "AI-aanvragen en resultaten.",
      "entities": [
        {
          "name": "AIRequest",
          "description": "Een prompt die door de gebruiker is ingediend voor AI-verwerking.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke aanvraag-ID"
            },
            {
              "name": "userId",
              "type": "string",
              "required": true,
              "description": "ID van de gebruiker die de aanvraag deed"
            },
            {
              "name": "prompt",
              "type": "string",
              "required": true,
              "description": "De door de gebruiker ingevoerde prompt"
            },
            {
              "name": "result",
              "type": "string",
              "required": false,
              "description": "AI-gegenereerde tekst als resultaat"
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum van de aanvraag"
            }
          ]
        }
      ]
    }
  ],
  "routes": [
    {
      "path": "/",
      "type": "page",
      "description": "Homepagina met uitleg en call-to-action.",
      "file": "app/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "page",
      "description": "Dashboard met overzicht van AI-aanvragen en mogelijkheid om nieuwe prompt in te dienen.",
      "file": "app/dashboard/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/login",
      "type": "page",
      "description": "Inlogpagina voor bestaande gebruikers.",
      "file": "app/login/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/register",
      "type": "page",
      "description": "Registratiepagina voor nieuwe gebruikers.",
      "file": "app/register/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "layout",
      "description": "Dashboard layout met navigatie voor ingelogde gebruikers.",
      "file": "app/dashboard/layout.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/",
      "type": "layout",
      "description": "Hoofdlayout met globale styling en notificaties.",
      "file": "app/layout.tsx",
      "layout": null
    }
  ],
  "apiRoutes": [
    {
      "path": "/api/auth/login",
      "methods": [
        "POST"
      ],
      "description": "Inloggen van gebruiker, retourneert sessie/token."
    },
    {
      "path": "/api/auth/register",
      "methods": [
        "POST"
      ],
      "description": "Registreren van nieuwe gebruiker."
    },
    {
      "path": "/api/auth/logout",
      "methods": [
        "POST"
      ],
      "description": "Uitloggen van gebruiker."
    },
    {
      "path": "/api/ai-requests",
      "methods": [
        "GET",
        "POST"
      ],
      "description": "Ophalen van alle AI-aanvragen van de ingelogde gebruiker (GET), of nieuwe aanvraag indienen (POST)."
    },
    {
      "path": "/api/ai-requests/[id]",
      "methods": [
        "GET",
        "DELETE"
      ],
      "description": "Ophalen van een specifieke AI-aanvraag (GET) of verwijderen (DELETE)."
    }
  ],
  "components": [
    {
      "name": "Navbar",
      "description": "Navigatiebalk met links en gebruikersmenu.",
      "file": "components/Navbar.tsx",
      "usedOn": [
        "/",
        "/dashboard"
      ]
    },
    {
      "name": "AuthForm",
      "description": "Formulier voor login en registratie.",
      "file": "components/AuthForm.tsx",
      "usedOn": [
        "/login",
        "/register"
      ]
    },
    {
      "name": "AIRequestForm",
      "description": "Formulier voor het indienen van een nieuwe AI-prompt.",
      "file": "components/AIRequestForm.tsx",
      "usedOn": [
        "/dashboard"
      ]
    },
    {
      "name": "AIRequestList",
      "description": "Lijst met AI-aanvragen en resultaten van de gebruiker.",
      "file": "components/AIRequestList.tsx",
      "usedOn": [
        "/dashboard"
      ]
    },
    {
      "name": "AIRequestItem",
      "description": "Weergave van een enkele AI-aanvraag met resultaat.",
      "file": "components/AIRequestItem.tsx",
      "usedOn": [
        "/dashboard"
      ]
    },
    {
      "name": "Notification",
      "description": "Component voor het tonen van meldingen en foutmeldingen.",
      "file": "components/Notification.tsx",
      "usedOn": [
        "/",
        "/dashboard",
        "/login",
        "/register"
      ]
    }
  ],
  "stateManagement": {
    "strategy": "React Context voor authenticatie en notificaties, lokale component state voor formulieren.",
    "notes": "Authenticatie- en gebruikerssessie wordt via Context API gedeeld. Notificaties worden centraal beheerd. Geen externe state libraries nodig."
  },
  "dataLayer": {
    "strategy": "In-memory store (singleton pattern) op de server voor gebruikers en AI-aanvragen.",
    "notes": "Alle data wordt tijdelijk in het geheugen opgeslagen. Voor productie kan eenvoudig een database worden toegevoegd. API-routes valideren authenticatie en autorisatie."
  }
}