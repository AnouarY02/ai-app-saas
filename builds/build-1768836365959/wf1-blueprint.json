{
  "appName": "AI App",
  "description": "Een eenvoudige SaaS-app waarmee gebruikers AI-taken kunnen beheren. Gebruikers kunnen zich registreren, inloggen en hun eigen AI-taken aanmaken en bekijken. De app bevat een dashboard, authenticatie, en een overzicht van AI-taken.",
  "tier": "medium",
  "stack": {
    "framework": "Next.js 14 App Router",
    "language": "TypeScript",
    "styling": [
      "Tailwind CSS",
      "shadcn/ui"
    ],
    "api": [
      "Next.js Route Handlers (app/api)"
    ],
    "notes": "Alle UI gebruikt shadcn/ui componenten. Styling gebeurt met Tailwind. API-routes worden gebruikt voor authenticatie en AI-taken. Data wordt in-memory opgeslagen voor MVP."
  },
  "domains": [
    {
      "name": "User",
      "description": "Beheert gebruikersinformatie en authenticatie.",
      "entities": [
        {
          "name": "User",
          "description": "Een geregistreerde gebruiker van de app.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de gebruiker"
            },
            {
              "name": "email",
              "type": "string",
              "required": true,
              "description": "E-mailadres van de gebruiker"
            },
            {
              "name": "passwordHash",
              "type": "string",
              "required": true,
              "description": "Gehasht wachtwoord"
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Datum van registratie"
            }
          ]
        }
      ]
    },
    {
      "name": "AITask",
      "description": "Beheert AI-taken die door gebruikers zijn aangemaakt.",
      "entities": [
        {
          "name": "AITask",
          "description": "Een AI-taak aangemaakt door een gebruiker.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de taak"
            },
            {
              "name": "userId",
              "type": "string",
              "required": true,
              "description": "Referentie naar de gebruiker die de taak heeft aangemaakt"
            },
            {
              "name": "title",
              "type": "string",
              "required": true,
              "description": "Titel van de AI-taak"
            },
            {
              "name": "status",
              "type": "string",
              "required": true,
              "description": "Status van de taak (bijv. pending, completed)"
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum van de taak"
            }
          ]
        }
      ]
    }
  ],
  "routes": [
    {
      "path": "/",
      "type": "page",
      "description": "Landingpagina met uitleg en call-to-action.",
      "file": "app/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "page",
      "description": "Dashboard met overzicht van AI-taken van de gebruiker.",
      "file": "app/dashboard/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/login",
      "type": "page",
      "description": "Inlogpagina voor bestaande gebruikers.",
      "file": "app/login/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/register",
      "type": "page",
      "description": "Registratiepagina voor nieuwe gebruikers.",
      "file": "app/register/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard/new",
      "type": "page",
      "description": "Pagina voor het aanmaken van een nieuwe AI-taak.",
      "file": "app/dashboard/new/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard/[id]",
      "type": "page",
      "description": "Detailpagina van een specifieke AI-taak.",
      "file": "app/dashboard/[id]/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "layout",
      "description": "Layout voor dashboardroutes, bevat navigatie.",
      "file": "app/dashboard/layout.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/",
      "type": "layout",
      "description": "Hoofdlayout van de app.",
      "file": "app/layout.tsx",
      "layout": null
    }
  ],
  "apiRoutes": [
    {
      "path": "/api/auth/register",
      "methods": [
        "POST"
      ],
      "description": "Registreert een nieuwe gebruiker."
    },
    {
      "path": "/api/auth/login",
      "methods": [
        "POST"
      ],
      "description": "Logt een gebruiker in en geeft een sessietoken terug."
    },
    {
      "path": "/api/auth/logout",
      "methods": [
        "POST"
      ],
      "description": "Logt de gebruiker uit en vernietigt de sessie."
    },
    {
      "path": "/api/aitasks",
      "methods": [
        "GET",
        "POST"
      ],
      "description": "Ophalen van alle AI-taken van de gebruiker of een nieuwe taak aanmaken."
    },
    {
      "path": "/api/aitasks/[id]",
      "methods": [
        "GET",
        "PATCH",
        "DELETE"
      ],
      "description": "Ophalen, bijwerken of verwijderen van een specifieke AI-taak."
    }
  ],
  "components": [
    {
      "name": "Navbar",
      "description": "Navigatiebalk bovenaan de app.",
      "file": "components/Navbar.tsx",
      "usedOn": [
        "app/layout.tsx",
        "app/dashboard/layout.tsx"
      ]
    },
    {
      "name": "AITaskList",
      "description": "Lijstweergave van AI-taken op het dashboard.",
      "file": "components/AITaskList.tsx",
      "usedOn": [
        "app/dashboard/page.tsx"
      ]
    },
    {
      "name": "AITaskForm",
      "description": "Formulier voor het aanmaken of bewerken van een AI-taak.",
      "file": "components/AITaskForm.tsx",
      "usedOn": [
        "app/dashboard/new/page.tsx",
        "app/dashboard/[id]/page.tsx"
      ]
    },
    {
      "name": "LoginForm",
      "description": "Formulier voor gebruikerslogin.",
      "file": "components/LoginForm.tsx",
      "usedOn": [
        "app/login/page.tsx"
      ]
    },
    {
      "name": "RegisterForm",
      "description": "Formulier voor gebruikersregistratie.",
      "file": "components/RegisterForm.tsx",
      "usedOn": [
        "app/register/page.tsx"
      ]
    },
    {
      "name": "AITaskDetail",
      "description": "Detailweergave van een AI-taak.",
      "file": "components/AITaskDetail.tsx",
      "usedOn": [
        "app/dashboard/[id]/page.tsx"
      ]
    }
  ],
  "stateManagement": {
    "strategy": "React Context voor authenticatie en eenvoudige state, component state voor formulieren.",
    "notes": "Authenticatie- en gebruikerssessie worden beheerd via een AuthContext. Voor AI-taken wordt lokale component state gebruikt, eventueel met context als meerdere componenten toegang nodig hebben."
  },
  "dataLayer": {
    "strategy": "In-memory store (singleton pattern) voor gebruikers en AI-taken.",
    "notes": "Voor MVP wordt data in-memory opgeslagen in een singleton object op server-niveau. In productie kan dit eenvoudig vervangen worden door een database."
  }
}