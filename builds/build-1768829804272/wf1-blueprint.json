{
  "appName": "AI App",
  "description": "Een eenvoudige SaaS-app waarmee gebruikers AI-taken kunnen beheren en uitvoeren. Gebruikers kunnen inloggen, hun profiel bekijken en een lijst van AI-taken aanmaken, bekijken en verwijderen.",
  "tier": "medium",
  "stack": {
    "framework": "Next.js 14 App Router",
    "language": "TypeScript",
    "styling": [
      "Tailwind CSS",
      "shadcn/ui"
    ],
    "api": [
      "Next.js Route Handlers (app/api)"
    ],
    "notes": "Alle UI gebruikt shadcn/ui componenten. Styling wordt verzorgd met Tailwind CSS. API-routes worden afgehandeld via app/api/* route handlers."
  },
  "domains": [
    {
      "name": "User",
      "description": "Beheert gebruikersinformatie en authenticatie.",
      "entities": [
        {
          "name": "User",
          "description": "Een geregistreerde gebruiker van de applicatie.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de gebruiker."
            },
            {
              "name": "email",
              "type": "string",
              "required": true,
              "description": "E-mailadres van de gebruiker."
            },
            {
              "name": "name",
              "type": "string",
              "required": false,
              "description": "Naam van de gebruiker."
            },
            {
              "name": "passwordHash",
              "type": "string",
              "required": true,
              "description": "Gehasht wachtwoord van de gebruiker."
            }
          ]
        }
      ]
    },
    {
      "name": "AITask",
      "description": "Beheert AI-taken die door gebruikers zijn aangemaakt.",
      "entities": [
        {
          "name": "AITask",
          "description": "Een taak die door de gebruiker is aangemaakt om door AI te laten uitvoeren.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de taak."
            },
            {
              "name": "userId",
              "type": "string",
              "required": true,
              "description": "ID van de gebruiker die de taak heeft aangemaakt."
            },
            {
              "name": "title",
              "type": "string",
              "required": true,
              "description": "Titel van de taak."
            },
            {
              "name": "status",
              "type": "string",
              "required": true,
              "description": "Status van de taak (bijv. pending, running, completed)."
            },
            {
              "name": "createdAt",
              "type": "string",
              "required": true,
              "description": "Aanmaakdatum van de taak (ISO string)."
            }
          ]
        }
      ]
    }
  ],
  "routes": [
    {
      "path": "/",
      "type": "page",
      "description": "Homepagina met overzicht van de app en call-to-action.",
      "file": "app/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/login",
      "type": "page",
      "description": "Loginpagina voor gebruikersauthenticatie.",
      "file": "app/login/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/register",
      "type": "page",
      "description": "Registratiepagina voor nieuwe gebruikers.",
      "file": "app/register/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "layout",
      "description": "Dashboardlayout voor ingelogde gebruikers.",
      "file": "app/dashboard/layout.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "page",
      "description": "Dashboard-overzicht met lijst van AI-taken.",
      "file": "app/dashboard/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard/profile",
      "type": "page",
      "description": "Profielpagina van de gebruiker.",
      "file": "app/dashboard/profile/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard/tasks",
      "type": "page",
      "description": "Overzicht en beheer van AI-taken.",
      "file": "app/dashboard/tasks/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    }
  ],
  "apiRoutes": [
    {
      "path": "/api/auth/login",
      "methods": [
        "POST"
      ],
      "description": "Authenticeert een gebruiker en geeft een sessietoken terug."
    },
    {
      "path": "/api/auth/register",
      "methods": [
        "POST"
      ],
      "description": "Registreert een nieuwe gebruiker."
    },
    {
      "path": "/api/auth/logout",
      "methods": [
        "POST"
      ],
      "description": "BeÃ«indigt de sessie van de gebruiker."
    },
    {
      "path": "/api/user/me",
      "methods": [
        "GET"
      ],
      "description": "Geeft de gegevens van de ingelogde gebruiker terug."
    },
    {
      "path": "/api/tasks",
      "methods": [
        "GET",
        "POST"
      ],
      "description": "Haalt alle AI-taken van de gebruiker op of maakt een nieuwe taak aan."
    },
    {
      "path": "/api/tasks/[id]",
      "methods": [
        "GET",
        "DELETE"
      ],
      "description": "Haalt details van een specifieke taak op of verwijdert deze."
    }
  ],
  "components": [
    {
      "name": "Navbar",
      "description": "Navigatiebalk bovenaan de app.",
      "file": "components/Navbar.tsx",
      "usedOn": [
        "app/layout.tsx",
        "app/dashboard/layout.tsx"
      ]
    },
    {
      "name": "LoginForm",
      "description": "Formulier voor gebruikerslogin.",
      "file": "components/LoginForm.tsx",
      "usedOn": [
        "app/login/page.tsx"
      ]
    },
    {
      "name": "RegisterForm",
      "description": "Formulier voor gebruikersregistratie.",
      "file": "components/RegisterForm.tsx",
      "usedOn": [
        "app/register/page.tsx"
      ]
    },
    {
      "name": "TaskList",
      "description": "Toont een lijst van AI-taken.",
      "file": "components/TaskList.tsx",
      "usedOn": [
        "app/dashboard/page.tsx",
        "app/dashboard/tasks/page.tsx"
      ]
    },
    {
      "name": "TaskItem",
      "description": "Toont een enkele AI-taak in de lijst.",
      "file": "components/TaskItem.tsx",
      "usedOn": [
        "components/TaskList.tsx"
      ]
    },
    {
      "name": "TaskForm",
      "description": "Formulier om een nieuwe AI-taak aan te maken.",
      "file": "components/TaskForm.tsx",
      "usedOn": [
        "app/dashboard/tasks/page.tsx"
      ]
    },
    {
      "name": "ProfileCard",
      "description": "Toont gebruikersprofielinformatie.",
      "file": "components/ProfileCard.tsx",
      "usedOn": [
        "app/dashboard/profile/page.tsx"
      ]
    }
  ],
  "stateManagement": {
    "strategy": "React context voor authenticatie en eenvoudige globale state, useState/useEffect voor lokale state.",
    "notes": "Authenticatie- en gebruikersdata worden in context opgeslagen. Task state wordt per pagina/component opgehaald via API-calls."
  },
  "dataLayer": {
    "strategy": "In-memory store (singleton pattern) voor gebruikers- en taakdata.",
    "notes": "Voor MVP wordt data in-memory opgeslagen in een singleton object. In productie kan dit eenvoudig vervangen worden door een database."
  }
}