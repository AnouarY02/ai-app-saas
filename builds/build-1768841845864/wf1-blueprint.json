{
  "appName": "AI App",
  "description": "Een eenvoudige SaaS-app waarmee gebruikers AI-taken kunnen beheren. Gebruikers kunnen zich registreren, inloggen en hun AI-taken bekijken en toevoegen. De app bevat een dashboard, taakbeheer en gebruikersprofielpagina's.",
  "tier": "medium",
  "stack": {
    "framework": "Next.js 14 App Router",
    "language": "TypeScript",
    "styling": [
      "Tailwind CSS",
      "shadcn/ui"
    ],
    "api": [
      "Next.js Route Handlers (app/api)"
    ],
    "notes": "Alle UI wordt gebouwd met shadcn/ui en Tailwind CSS. API-routes worden afgehandeld via app/api/* handlers. Data wordt in-memory opgeslagen voor MVP."
  },
  "domains": [
    {
      "name": "User Management",
      "description": "Beheer van gebruikersregistratie, authenticatie en profiel.",
      "entities": [
        {
          "name": "User",
          "description": "Een geregistreerde gebruiker van de app.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de gebruiker"
            },
            {
              "name": "email",
              "type": "string",
              "required": true,
              "description": "E-mailadres van de gebruiker"
            },
            {
              "name": "passwordHash",
              "type": "string",
              "required": true,
              "description": "Gehasht wachtwoord"
            },
            {
              "name": "name",
              "type": "string",
              "required": false,
              "description": "Volledige naam van de gebruiker"
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Datum van registratie"
            }
          ]
        }
      ]
    },
    {
      "name": "AI Task Management",
      "description": "Beheer van AI-taken aangemaakt door gebruikers.",
      "entities": [
        {
          "name": "AITask",
          "description": "Een AI-taak aangemaakt door een gebruiker.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de taak"
            },
            {
              "name": "userId",
              "type": "string",
              "required": true,
              "description": "ID van de gebruiker die de taak heeft aangemaakt"
            },
            {
              "name": "title",
              "type": "string",
              "required": true,
              "description": "Titel van de AI-taak"
            },
            {
              "name": "description",
              "type": "string",
              "required": false,
              "description": "Beschrijving van de AI-taak"
            },
            {
              "name": "status",
              "type": "string",
              "required": true,
              "description": "Status van de taak (pending, running, completed, failed)"
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum van de taak"
            }
          ]
        }
      ]
    }
  ],
  "routes": [
    {
      "path": "/",
      "type": "page",
      "description": "Landingpagina met uitleg en call-to-action.",
      "file": "app/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "page",
      "description": "Dashboard met overzicht van AI-taken van de gebruiker.",
      "file": "app/dashboard/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/login",
      "type": "page",
      "description": "Inlogpagina voor gebruikers.",
      "file": "app/login/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/register",
      "type": "page",
      "description": "Registratiepagina voor nieuwe gebruikers.",
      "file": "app/register/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/profile",
      "type": "page",
      "description": "Profielpagina van de gebruiker.",
      "file": "app/profile/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "layout",
      "description": "Layout voor dashboard en subroutes.",
      "file": "app/dashboard/layout.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/",
      "type": "layout",
      "description": "Hoofdlayout van de app.",
      "file": "app/layout.tsx",
      "layout": null
    }
  ],
  "apiRoutes": [
    {
      "path": "/api/auth/register",
      "methods": [
        "POST"
      ],
      "description": "Registreer een nieuwe gebruiker."
    },
    {
      "path": "/api/auth/login",
      "methods": [
        "POST"
      ],
      "description": "Log een gebruiker in en retourneer een sessie/token."
    },
    {
      "path": "/api/auth/logout",
      "methods": [
        "POST"
      ],
      "description": "Log de gebruiker uit."
    },
    {
      "path": "/api/user/me",
      "methods": [
        "GET"
      ],
      "description": "Haal profielinformatie van de ingelogde gebruiker op."
    },
    {
      "path": "/api/aitasks",
      "methods": [
        "GET",
        "POST"
      ],
      "description": "Haal alle AI-taken van de gebruiker op of maak een nieuwe taak aan."
    },
    {
      "path": "/api/aitasks/[id]",
      "methods": [
        "GET",
        "PATCH",
        "DELETE"
      ],
      "description": "Bekijk, wijzig of verwijder een specifieke AI-taak."
    }
  ],
  "components": [
    {
      "name": "Navbar",
      "description": "Navigatiebalk bovenaan de app.",
      "file": "components/Navbar.tsx",
      "usedOn": [
        "app/layout.tsx",
        "app/dashboard/layout.tsx"
      ]
    },
    {
      "name": "AuthForm",
      "description": "Formulier voor login en registratie.",
      "file": "components/AuthForm.tsx",
      "usedOn": [
        "app/login/page.tsx",
        "app/register/page.tsx"
      ]
    },
    {
      "name": "AITaskList",
      "description": "Lijst met AI-taken van de gebruiker.",
      "file": "components/AITaskList.tsx",
      "usedOn": [
        "app/dashboard/page.tsx"
      ]
    },
    {
      "name": "AITaskForm",
      "description": "Formulier om een nieuwe AI-taak toe te voegen.",
      "file": "components/AITaskForm.tsx",
      "usedOn": [
        "app/dashboard/page.tsx"
      ]
    },
    {
      "name": "ProfileCard",
      "description": "Weergave van gebruikersprofielgegevens.",
      "file": "components/ProfileCard.tsx",
      "usedOn": [
        "app/profile/page.tsx"
      ]
    },
    {
      "name": "StatusBadge",
      "description": "Visuele statusindicator voor AI-taken.",
      "file": "components/StatusBadge.tsx",
      "usedOn": [
        "components/AITaskList.tsx"
      ]
    }
  ],
  "stateManagement": {
    "strategy": "React Context + useState voor auth en gebruikersdata, prop drilling voor eenvoudige component state.",
    "notes": "Authenticatie- en gebruikersstatus worden centraal beheerd met een AuthContext. Voor AI-taken wordt lokale state gebruikt binnen dashboardcomponenten."
  },
  "dataLayer": {
    "strategy": "In-memory store (singleton pattern) voor gebruikers en AI-taken.",
    "notes": "Voor MVP worden gebruikers en taken in-memory opgeslagen in een singleton. In productie kan dit eenvoudig vervangen worden door een database."
  }
}