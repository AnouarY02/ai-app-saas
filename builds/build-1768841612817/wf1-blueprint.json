{
  "appName": "AI App",
  "description": "Een eenvoudige SaaS-app waarmee gebruikers AI-taken kunnen beheren. Gebruikers kunnen zich registreren, inloggen, hun profiel bekijken en een lijst van AI-taken aanmaken, bekijken en verwijderen.",
  "tier": "medium",
  "stack": {
    "framework": "Next.js 14 App Router",
    "language": "TypeScript",
    "styling": [
      "Tailwind CSS",
      "shadcn/ui"
    ],
    "api": [
      "Next.js Route Handlers (app/api)"
    ],
    "notes": "Alle UI-componenten zijn gebaseerd op shadcn/ui en gestyled met Tailwind CSS. API-routes worden beheerd via Next.js app/api directory."
  },
  "domains": [
    {
      "name": "User",
      "description": "Beheer van gebruikersaccounts en authenticatie.",
      "entities": [
        {
          "name": "User",
          "description": "Een geregistreerde gebruiker van de app.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de gebruiker."
            },
            {
              "name": "email",
              "type": "string",
              "required": true,
              "description": "E-mailadres van de gebruiker."
            },
            {
              "name": "passwordHash",
              "type": "string",
              "required": true,
              "description": "Gehasht wachtwoord van de gebruiker."
            },
            {
              "name": "name",
              "type": "string",
              "required": false,
              "description": "Naam van de gebruiker."
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Datum van registratie."
            }
          ]
        }
      ]
    },
    {
      "name": "AITask",
      "description": "Beheer van AI-taken die door gebruikers zijn aangemaakt.",
      "entities": [
        {
          "name": "AITask",
          "description": "Een taak die door een gebruiker is aangemaakt.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de taak."
            },
            {
              "name": "userId",
              "type": "string",
              "required": true,
              "description": "ID van de gebruiker die de taak heeft aangemaakt."
            },
            {
              "name": "title",
              "type": "string",
              "required": true,
              "description": "Titel van de AI-taak."
            },
            {
              "name": "description",
              "type": "string",
              "required": false,
              "description": "Optionele beschrijving van de taak."
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum van de taak."
            }
          ]
        }
      ]
    }
  ],
  "routes": [
    {
      "path": "/",
      "type": "page",
      "description": "Homepagina met uitleg en call-to-action.",
      "file": "app/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/login",
      "type": "page",
      "description": "Inlogpagina voor gebruikers.",
      "file": "app/login/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/register",
      "type": "page",
      "description": "Registratiepagina voor nieuwe gebruikers.",
      "file": "app/register/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "layout",
      "description": "Dashboardlayout voor ingelogde gebruikers.",
      "file": "app/dashboard/layout.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "page",
      "description": "Overzicht van AI-taken van de gebruiker.",
      "file": "app/dashboard/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard/profile",
      "type": "page",
      "description": "Profielpagina van de gebruiker.",
      "file": "app/dashboard/profile/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    }
  ],
  "apiRoutes": [
    {
      "path": "/api/auth/register",
      "methods": [
        "POST"
      ],
      "description": "Registreer een nieuwe gebruiker."
    },
    {
      "path": "/api/auth/login",
      "methods": [
        "POST"
      ],
      "description": "Log een gebruiker in."
    },
    {
      "path": "/api/auth/logout",
      "methods": [
        "POST"
      ],
      "description": "Log een gebruiker uit."
    },
    {
      "path": "/api/user/me",
      "methods": [
        "GET"
      ],
      "description": "Haal de gegevens van de ingelogde gebruiker op."
    },
    {
      "path": "/api/aitasks",
      "methods": [
        "GET",
        "POST"
      ],
      "description": "Haal alle AI-taken van de gebruiker op of maak een nieuwe taak aan."
    },
    {
      "path": "/api/aitasks/[id]",
      "methods": [
        "GET",
        "DELETE"
      ],
      "description": "Haal een specifieke taak op of verwijder deze."
    }
  ],
  "components": [
    {
      "name": "Navbar",
      "description": "Navigatiebalk bovenaan de app.",
      "file": "components/Navbar.tsx",
      "usedOn": [
        "/",
        "/login",
        "/register",
        "/dashboard",
        "/dashboard/profile"
      ]
    },
    {
      "name": "AITaskList",
      "description": "Toont een lijst van AI-taken.",
      "file": "components/AITaskList.tsx",
      "usedOn": [
        "/dashboard"
      ]
    },
    {
      "name": "AITaskItem",
      "description": "Toont een enkele AI-taak in de lijst.",
      "file": "components/AITaskItem.tsx",
      "usedOn": [
        "/dashboard"
      ]
    },
    {
      "name": "AddAITaskForm",
      "description": "Formulier om een nieuwe AI-taak toe te voegen.",
      "file": "components/AddAITaskForm.tsx",
      "usedOn": [
        "/dashboard"
      ]
    },
    {
      "name": "ProfileCard",
      "description": "Toont gebruikersprofielinformatie.",
      "file": "components/ProfileCard.tsx",
      "usedOn": [
        "/dashboard/profile"
      ]
    },
    {
      "name": "AuthForm",
      "description": "Herbruikbaar formulier voor login en registratie.",
      "file": "components/AuthForm.tsx",
      "usedOn": [
        "/login",
        "/register"
      ]
    }
  ],
  "stateManagement": {
    "strategy": "React context voor authenticatie, lokale component state voor formulieren en interacties.",
    "notes": "Authenticatiecontext wordt opgezet voor gebruikerssessies. Voor AI-taken wordt data opgehaald via API-routes en in component state beheerd."
  },
  "dataLayer": {
    "strategy": "In-memory store (singleton pattern) voor gebruikers en AI-taken.",
    "notes": "Voor MVP wordt data opgeslagen in een eenvoudige in-memory store binnen de API-routes. In productie kan dit eenvoudig vervangen worden door een database."
  }
}