{
  "appName": "AI App",
  "description": "Een eenvoudige SaaS-app waarmee gebruikers AI-taken kunnen beheren. Gebruikers kunnen zich registreren, inloggen, hun profiel beheren en een lijst van AI-taken bekijken en toevoegen.",
  "tier": "medium",
  "stack": {
    "framework": "Next.js 14 App Router",
    "language": "TypeScript",
    "styling": [
      "Tailwind CSS",
      "shadcn/ui"
    ],
    "api": [
      "Next.js Route Handlers (app/api)"
    ],
    "notes": "Alle UI-componenten worden opgebouwd met shadcn/ui en gestyled met Tailwind. API-routes worden afgehandeld via Next.js route handlers. Data wordt in-memory opgeslagen voor MVP."
  },
  "domains": [
    {
      "name": "User",
      "description": "Beheer van gebruikersaccounts en authenticatie.",
      "entities": [
        {
          "name": "User",
          "description": "Een geregistreerde gebruiker van de app.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de gebruiker"
            },
            {
              "name": "email",
              "type": "string",
              "required": true,
              "description": "E-mailadres van de gebruiker"
            },
            {
              "name": "passwordHash",
              "type": "string",
              "required": true,
              "description": "Gehasht wachtwoord"
            },
            {
              "name": "name",
              "type": "string",
              "required": false,
              "description": "Naam van de gebruiker"
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum van het account"
            }
          ]
        }
      ]
    },
    {
      "name": "AITask",
      "description": "AI-taken die door gebruikers worden beheerd.",
      "entities": [
        {
          "name": "AITask",
          "description": "Een AI-gerelateerde taak aangemaakt door een gebruiker.",
          "fields": [
            {
              "name": "id",
              "type": "string",
              "required": true,
              "description": "Unieke identifier voor de taak"
            },
            {
              "name": "userId",
              "type": "string",
              "required": true,
              "description": "ID van de gebruiker die de taak heeft aangemaakt"
            },
            {
              "name": "title",
              "type": "string",
              "required": true,
              "description": "Titel van de taak"
            },
            {
              "name": "description",
              "type": "string",
              "required": false,
              "description": "Beschrijving van de taak"
            },
            {
              "name": "createdAt",
              "type": "Date",
              "required": true,
              "description": "Aanmaakdatum van de taak"
            }
          ]
        }
      ]
    }
  ],
  "routes": [
    {
      "path": "/",
      "type": "page",
      "description": "Homepagina met uitleg en call-to-action.",
      "file": "app/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/login",
      "type": "page",
      "description": "Loginpagina voor bestaande gebruikers.",
      "file": "app/login/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/register",
      "type": "page",
      "description": "Registratiepagina voor nieuwe gebruikers.",
      "file": "app/register/page.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "layout",
      "description": "Dashboardlayout voor ingelogde gebruikers.",
      "file": "app/dashboard/layout.tsx",
      "layout": "app/layout.tsx"
    },
    {
      "path": "/dashboard",
      "type": "page",
      "description": "Overzicht van AI-taken van de gebruiker.",
      "file": "app/dashboard/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard/profile",
      "type": "page",
      "description": "Profielpagina van de gebruiker.",
      "file": "app/dashboard/profile/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard/tasks",
      "type": "page",
      "description": "Lijst van AI-taken van de gebruiker.",
      "file": "app/dashboard/tasks/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    },
    {
      "path": "/dashboard/tasks/new",
      "type": "page",
      "description": "Pagina om een nieuwe AI-taak toe te voegen.",
      "file": "app/dashboard/tasks/new/page.tsx",
      "layout": "app/dashboard/layout.tsx"
    }
  ],
  "apiRoutes": [
    {
      "path": "/api/auth/register",
      "methods": [
        "POST"
      ],
      "description": "Registreer een nieuwe gebruiker."
    },
    {
      "path": "/api/auth/login",
      "methods": [
        "POST"
      ],
      "description": "Log een bestaande gebruiker in."
    },
    {
      "path": "/api/auth/logout",
      "methods": [
        "POST"
      ],
      "description": "Log de gebruiker uit."
    },
    {
      "path": "/api/user/profile",
      "methods": [
        "GET",
        "PUT"
      ],
      "description": "Haal profielgegevens op of werk deze bij."
    },
    {
      "path": "/api/tasks",
      "methods": [
        "GET",
        "POST"
      ],
      "description": "Haal alle AI-taken van de gebruiker op of voeg een nieuwe taak toe."
    },
    {
      "path": "/api/tasks/[id]",
      "methods": [
        "GET",
        "PUT",
        "DELETE"
      ],
      "description": "Haal een specifieke taak op, werk deze bij of verwijder deze."
    }
  ],
  "components": [
    {
      "name": "Navbar",
      "description": "Navigatiebalk bovenaan de app.",
      "file": "components/Navbar.tsx",
      "usedOn": [
        "/",
        "/login",
        "/register",
        "/dashboard",
        "/dashboard/profile",
        "/dashboard/tasks",
        "/dashboard/tasks/new"
      ]
    },
    {
      "name": "TaskList",
      "description": "Toont een lijst van AI-taken.",
      "file": "components/TaskList.tsx",
      "usedOn": [
        "/dashboard",
        "/dashboard/tasks"
      ]
    },
    {
      "name": "TaskForm",
      "description": "Formulier om een nieuwe AI-taak toe te voegen of te bewerken.",
      "file": "components/TaskForm.tsx",
      "usedOn": [
        "/dashboard/tasks/new"
      ]
    },
    {
      "name": "ProfileForm",
      "description": "Formulier om gebruikersprofiel te bewerken.",
      "file": "components/ProfileForm.tsx",
      "usedOn": [
        "/dashboard/profile"
      ]
    },
    {
      "name": "AuthForm",
      "description": "Formulier voor login en registratie.",
      "file": "components/AuthForm.tsx",
      "usedOn": [
        "/login",
        "/register"
      ]
    }
  ],
  "stateManagement": {
    "strategy": "React Context + useState voor authenticatie en gebruikersstatus.",
    "notes": "Authenticatie- en gebruikersstatus worden in context opgeslagen. Voor eenvoudige state (zoals formulierstatus) wordt useState gebruikt."
  },
  "dataLayer": {
    "strategy": "In-memory store (singleton pattern) voor gebruikers en taken.",
    "notes": "Voor MVP worden gebruikers en taken in-memory opgeslagen in een singleton. In productie kan dit vervangen worden door een database."
  }
}