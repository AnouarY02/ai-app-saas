{
  "name": "testapp-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev:frontend": "npm --prefix frontend run dev",
    "build:frontend": "npm --prefix frontend run build",
    "start:frontend": "npm --prefix frontend run start",
    "lint:frontend": "npm --prefix frontend run lint",
    "test:frontend": "npm --prefix frontend run test",
    "dev:backend": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "migrate:backend": "cd backend && alembic upgrade head",
    "test:backend": "cd backend && pytest",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "next": "^13.0.0",
    "react": "^18.0.0",
    "axios": "^1.0.0"
  }
}
