{
  "name": "ai-app-saas-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm:start --prefix backend\" \"npm:start --prefix frontend\"",
    "build": "npm:build --prefix backend && npm:build --prefix frontend",
    "start": "npm:start --prefix backend",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0",
    "concurrently": "^8.0.0"
  }
}
